<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/yourChildLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tresflex.schoolapp.helper.MyTextView
            android:id="@+id/rollNotxtP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/roll_no"
            android:textColor="@color/studentTxtColor"
            android:textSize="20sp"
            customfontdemo:fontName="@string/font_textstyle" />

        <com.tresflex.schoolapp.helper.MyTextView

            android:id="@+id/nameTxtP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/roll_no"
            android:textColor="@color/studentTxtColor"
            android:textSize="20sp"
            customfontdemo:fontName="@string/font_textstyle" />

        <com.tresflex.schoolapp.helper.MyTextView

            android:id="@+id/presentTxtP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/roll_no"
            android:textColor="@color/studentTxtColor"
            android:textSize="20sp"
            customfontdemo:fontName="@string/font_textstyle" />
    </LinearLayout>
</LinearLayout>