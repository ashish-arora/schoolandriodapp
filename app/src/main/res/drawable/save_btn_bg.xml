<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" />

            <solid android:color="#0099ff" />

            <padding
                android:bottom="5dp"
                android:left="0dp"
                android:right="0dp"
                android:top="5dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>